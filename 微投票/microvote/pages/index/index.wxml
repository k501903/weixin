<!--index.wxml-->
<view class="container">
    <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="apptitle">
    <text class="app-avatar">欢迎使用{{appname}}</text>
  </view>
  <view class="btn-avatar">
  <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="attendvote"> {{functionbtn1}} </button>
  </view>
  <view class="btn-avatar">
  <button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="myvote"> {{functionbtn3}} </button>
  </view>
  <view class="btn-avatar">
  <button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="createvote"> {{functionbtn2}} </button>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
